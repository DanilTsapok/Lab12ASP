@model User

<style>
    form{
        display:flex;
        justify-content:center;
        align-items:center;
        height: 100vh;
        flex-direction: column
        
    }
</style>


<form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">First Name</label>
        <input type="text" asp-for="Name" placeholder="FirstName" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="SecondName">Second Name</label>
        <input type="text" asp-for="SecondName" placeholder="SecondName" class="form-control" />
        <span asp-validation-for="SecondName" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="Age">Age</label>
        <input type="number" asp-for="Age" placeholder="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </p>
    <div class="buttons">

    <button type="submit" asp-action="Edit" class="btn btn-primary" >Save Changes</button>
    <button type="submit" asp-action="AllUsers" class="btn btn-primary">Back</button>
    </div>
</form>